<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sharing_Place.Views.ForgetPassword"
             Title="ForgetPassword">
    
    <StackLayout Margin="10">
        <Label Text="Forgot Password" FontSize="20" HorizontalOptions="Center" />

        <Entry Placeholder="Email" x:Name="EmailEntry" Keyboard="Email" />

        <Button Text="Reset Password" Clicked="ResetPasswordButton_Clicked" />
    </StackLayout>
    
</ContentPage>