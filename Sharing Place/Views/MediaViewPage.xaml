<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sharing_Place.Views.MediaViewPage">
    <StackLayout>
        <StackLayout Orientation="Horizontal">
        <Label x:Name="TitleLabel" FontSize="Medium" HorizontalOptions="Center" />
            <ImageButton Source="close.png" WidthRequest="30" 
                         HeightRequest="30" HorizontalOptions="EndAndExpand"
                         Clicked="Exit"/>
        </StackLayout>
        <ScrollView>
            <StackLayout x:Name="MediaContainer" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
        </ScrollView>
        <Button Text="Download" Clicked="OnDownloadButtonClicked" HorizontalOptions="Center" VerticalOptions="EndAndExpand" />
    </StackLayout>
</ContentPage>
