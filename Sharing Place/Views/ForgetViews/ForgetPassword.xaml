<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sharing_Place.Views.ForgetViews.ForgetPassword"
             Title="ForgetPassword">
    
    <StackLayout Margin="20" Spacing="5">
        <Label Text="Forgot Password" FontSize="Large" HorizontalOptions="Center" />

        <Entry Placeholder="Username or Email" FontSize="Medium" x:Name="UserEntry" Keyboard="Email" />

        <Button Text="Reset Password" FontSize="Medium" Clicked="onClickReset" />

        <Label Text="Remembered your password ?" FontSize="Small" HorizontalOptions="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="onClickBack"/>
            </Label.GestureRecognizers>
        </Label>
    </StackLayout>
    
</ContentPage>