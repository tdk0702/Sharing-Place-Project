        <ShellContent
        Title="Posts"
        ContentTemplate="{DataTemplate local:PostMenu}"
        Route="PostMenu" />
        <ShellContent
        Title="Chat"
        ContentTemplate="{DataTemplate local:Message}"
        Route="Message" />
        <ShellContent
        Title="Room"
        ContentTemplate="{DataTemplate local:PostMenu}"
        Route="PostMenu" />
    </TabBar-->
</Shell>
