<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Sharing_Place.Views"
       x:Class="Sharing_Place.Shells.LoginShell" >
    <!--Shell.ItemTemplate>
        <DataTemplate>
            <Grid BackgroundColor="#27D276">
                <Label Text="{Binding Title}" />
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate-->
    <Shell.Resources>
        <Style TargetType="TabBar">
            <Setter Property="Shell.TabBarBackgroundColor"
                Value="#27D276" />
            <Setter Property="Shell.TabBarTitleColor"
                Value="Black" />
            <Setter Property="Shell.TabBarUnselectedColor"
           Value="White" />
        </Style>
    </Shell.Resources>
    <TabBar>
        <ShellContent 
            x:Name="signin"
            Title="SIGN IN"
            ContentTemplate="{DataTemplate local:SignIn}"
            Route="SignIn">
            
        </ShellContent>
        <ShellContent 
            x:Name="signup"
            Title="SIGN UP"
            ContentTemplate="{DataTemplate local:Register}"
            Route="Register" />
    </TabBar>
</Shell>
